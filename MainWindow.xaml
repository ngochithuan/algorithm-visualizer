<Window x:Class="algorithm_visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:algorithm_visualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9.25*"/>
                <ColumnDefinition Width=".75*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Sorting" FontSize="25"/>
            <Button Grid.Column="1" Name="btnRun" Content="Run" Cursor="Hand" Margin="7"/>
        </Grid>
        
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="0,0,0,1"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="9*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Input:"/>
                    <TextBox Grid.Column="1" Margin="5,5,5,5"/>
                </Grid>
                
                <RadioButton Grid.Column="0" Grid.Row="1" x:Name="rbtnBogo" Content="Bogo" VerticalAlignment="Center" Padding="5,-1,0,0" Cursor="Hand"/>
                <RadioButton Grid.Column="0" Grid.Row="2" x:Name="rbtnSelection" Content="Selection" VerticalAlignment="Center" Padding="5,-1,0,0" Cursor="Hand"/>
                <RadioButton Grid.Column="0" Grid.Row="3" x:Name="rbtnQuick" Content="Quick" VerticalAlignment="Center" Padding="5,-1,0,0" Cursor="Hand"/>
            </Grid>

            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="0,0,1,0"/>

            <!-- Important thing here -->
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1"/>
                    <Canvas Grid.Row="1" >
                        <Rectangle Fill="LightGray" Height="100" Width="20" />
                        
                    </Canvas>
                </Grid>
            </Grid>
            
            
            
        </Grid>
        
    </Grid>
</Window>
